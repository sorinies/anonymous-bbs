<% include header.ejs %>
    <div class="container">
      <div class="card">
        <h4 class="card-header"><%= article.title %></h4>
        <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted"><%= article.date %></h6>
          <p class="card-text"><%= article.content %></p>
        </div>
      </div>
      <div class="card">
        <h4 class="card-header">Comment</h4>
        <div class="card-body">
          <form action="/comment/<%= article.id %>" method="post">
            <div class="form-row">
              <div class="form-group col-md-3">
                <label for="commentName" class="col-form-label">닉네임</label>
                <input class="form-control" type="text" id="commentName" name="commentName" placeholder="닉네임">
              </div>
              <div class="form-group col-md-9">
                <label for="commentInput" class="col-form-label">내용</label>
                <input class="form-control" type="text" id="commentInput" name="commentInput" placeholder="코멘트를 입력하세요">
              </div>
            </div>
            <button type="submit" class="btn btn-primary">작성</button>
          </form>
        </div>
        <% if (comments.length == 0) { %>
        코멘트 없음.
        <% } else { %>
        <ul class="list-group list-group-flush">
          <% comments.forEach(item => { %>
          <li class="list-group-item"><%= item.comment %> - <strong><%= item.name %></strong> <small><%= item.date %></small></li>
          <% }) %>
        </ul>
        <% } %>
      </div>
    </div><!-- /.container -->
<% include footer.ejs %>
